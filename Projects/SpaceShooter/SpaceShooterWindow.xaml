<Window x:Class="GameCenterProject.Projects.SpaceShooter.SpaceShooterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCenterProject.Projects.SpaceShooter"
        mc:Ignorable="d"
        Title="SpaceShooterWindow" Height="615" Width="540">
    <Canvas Name="GameCanvas" Focusable="True" Background="Black" KeyDown="OnKeyDown" KeyUp="OnKeyUp">
        <Rectangle Name="player" Height="50" Width="60" Fill="yellow" Canvas.Left="240" Canvas.Top="487" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label Name="scoreText" Content="Score: 0" FontSize="18" FontWeight="Bold" Foreground="White"/>
        <Label Name="damageText" Content="Score: 0" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" Canvas.Left="408" VerticalAlignment="Center"/>
    </Canvas>
</Window>
