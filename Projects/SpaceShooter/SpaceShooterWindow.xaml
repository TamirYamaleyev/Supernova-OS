<Window x:Class="GameCenterProject.Projects.SpaceShooter.SpaceShooterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCenterProject.Projects.SpaceShooter"
        mc:Ignorable="d"
        Title="SpaceShooterWindow" Height="615" Width="800" ResizeMode="CanMinimize">
    
    <Canvas Name="GameCanvas" Focusable="True" Background="Black" KeyDown="OnKeyDown" KeyUp="OnKeyUp">
        <Rectangle Name="player" Height="50" Width="60" Fill="yellow" Canvas.Left="370" Canvas.Top="509" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Label Name="scoreText" Content="Score: 0" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" Canvas.Top="10" VerticalAlignment="Center" Canvas.Left="25"/>
        <Label Name="damageText" Content="Damage: 0" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" Canvas.Left="648" VerticalAlignment="Center" Canvas.Top="10"/>
    </Canvas>
</Window>
