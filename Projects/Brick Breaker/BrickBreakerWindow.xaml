<Window x:Class="GameCenterProject.Projects.Brick_Breaker.BrickBreakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCenterProject.Projects.Brick_Breaker"
        mc:Ignorable="d"
        Title="BrickBreakerWindow" Width="800" Height="600"
        WindowState="Maximized">
    <Grid>
        <Canvas Grid.Row="0" Background="LightGray"></Canvas>
        <Canvas Name="Canvas" Grid.Row="1" Background="LightGray">
            <Rectangle Height="35" Stroke="Teal" StrokeThickness="4" Fill="LightCyan" RadiusX="10" RadiusY="10" VerticalAlignment="Top" Width="200" Canvas.Left="300" Canvas.Top="10"/>
        </Canvas>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
    </Grid>
</Window>
